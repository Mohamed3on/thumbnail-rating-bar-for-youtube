{
  "manifest_version": 3,
  "name": "Thumbnail Rating Bar for YouTube™",
  "version": "1.8.5",
  "description": "Displays a rating bar (likes/dislikes) on the bottom of every YouTube™ video thumbnail.",
  "author": "Elliot Waite",
  "icons": {
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": "icons/icon96.png",
    "default_title": "Settings",
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://youtube.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://youtube.com/*",
    "*://*.returnyoutubedislikeapi.com/*",
    "https://www.googleapis.com/*"
  ],
  "permissions": ["storage", "scripting"],
  "web_accessible_resources": [
    {
      "resources": [
        "css/bar.css",
        "css/bar-bottom.css",
        "css/bar-bottom-separator.css",
        "css/bar-bottom-tooltip.css",
        "css/bar-tooltip.css",
        "css/bar-top.css",
        "css/bar-top-separator.css",
        "css/bar-top-tooltip.css",
        "css/bar-video-page.css",
        "css/text-percentage.css"
      ],
      "matches": [
        "*://*.youtube.com/*",
        "*://youtube.com/*"
      ]
    }
  ]
}
